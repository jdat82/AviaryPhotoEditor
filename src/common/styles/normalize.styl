// The page should take 100% of the viewport even if smaller.
body
    min-height 100%

p
    padding 0

li
    list-style none

a
    color inherit
    text-decoration none

input, textarea
    user-select text
    -webkit-appearance none
    -moz-appearance none

button
    border none
    background none
    &:focus
        outline: none

*
    box-sizing border-box
    margin 0
    padding 0
    user-select none
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)
    -webkit-touch-callout none
    transition-duration 400ms
    transition-property none