.wave-popin
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index 100


    &.shown
        .wave-popin-overlay
            opacity 1
        .wave-popin-content-wrapper,
        .wave-popin-shape
            transform translate3d(0,0,0)


    &-content-wrapper
        position fixed
        bottom 0
        left 0
        width 100%
        height 160px
        z-index 102
        transform translate3d(0,100%,0)
        transition-property transform


    &-shape
        position absolute
        width 100%
        width calc(100% + 400px)
        height 100%
        top 0
        left 0
        fill #373a47
        transform translate3d(-400px,0,0)
        transition-property transform


    &-overlay
        opacity 0
        background-color rgba(black, .2)
        transition-property opacity
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        z-index 101