.save-view

    z-index 200

    &.shown .content .label-container
        opacity 1

    .content
        text-align center
        color #eee

        .label-container
            padding 0 1rem
            margin-top 20px
            opacity 0
            background rgba(white,.1)
            line-height 60px

            transition-property opacity
            transition-delay 200ms

            display flex
            align-items center
            justify-content center

            .label
                min-width 8rem


        .progress
            overflow hidden
            width 80%
            margin-top 30px
            height 20px
            position relative
            margin 30px auto

            .message,progress
                transition-property opacity, transform
                position absolute
                top 0
                left 0
                width 100%
                height 100%

            &.failed
                .message
                    opacity 1
                    transform scale(1)
                progress
                    opacity 0
                    transform scale(1.1)

            .message
                color #FF2D55
                opacity 0
                transform scale(.9)

            progress
                -webkit-appearance none

                &::-webkit-progress-bar
                    background none
                    border 2px solid #fff
                    border-radius 10px

                &::-webkit-progress-value
                    border-radius 10px
                    background-color #fff
                    transition width 400ms

                &:not([value]) ~ .infinite
                    opacity 1
                    -webkit-animation infinite-progress 2s alternate infinite

            .infinite
                width 10px
                height 10px
                border-radius 10px
                background-color white
                //background-color #ff2d55
                position absolute
                top 0
                left 5px
                // right 0
                bottom 0
                margin auto
                opacity 0

    @keyframes infinite-progress
        from
            left .7%
        to
            left 98.3%